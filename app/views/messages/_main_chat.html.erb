<div class="chat-header">
  <div class="left-header">
    <div class="current-room">
    hogehogeroom
    </div>
  </div>
  <div class="right-header">
    <div class="exit-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message-box">
    <div class="info">
      <div class="post-user">Fuga</div>
      <div class="post-time">2020/4/01(Wed) 12:43:20</div>
    </div>
    <div class="message">こんにちは！</div>
  </div>
  <div class="message-box">
    <div class="info">
      <div class="post-user">Hoge</div>
      <div class="post-time">2020/4/03(Fri) 9:27:20</div>
    </div>
    <div class="message">おはよう</div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>